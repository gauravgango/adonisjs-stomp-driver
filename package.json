{
	"name": "@gauravgango/adonisjs-stomp-driver",
	"version": "1.0.0-beta.9",
	"description": "Stomp Protocol Driver to handle queue and pub/sub",
	"main": "build/providers/StompProvider.js",
	"files": [
		"build/adonis-typings",
		"build/providers",
		"build/src",
		"build/templates",
		"build/instructions.js"
	],
	"scripts": {
		"mrm": "mrm --preset=@adonisjs/mrm-preset",
		"pretest": "npm run lint",
		"compile": "npm run lint && npm run clean && tsc",
		"build": "npm run compile && npm run copyfiles",
		"copyfiles": "copyfiles \"templates/**/*.txt\" build",
		"test": "echo \"Error: no test specified\" && exit 1",
		"prepublishOnly": "npm run build",
		"lint": "eslint . --ext=.ts",
		"release": "np",
		"format": "prettier --write .",
		"clean": "del build"
	},
	"author": "gaurav.gango@gmail.com",
	"license": "MIT",
	"types": "build/adonis-typings/index.d.ts",
	"devDependencies": {
		"@adonisjs/application": "^2.0.0",
		"@adonisjs/core": "^5.0.0-preview-rc-1.12",
		"@adonisjs/fold": "^4.0.9",
		"@adonisjs/mrm-preset": "^2.4.0",
		"@adonisjs/sink": "^1.0.17",
		"@types/node": "^14.11.2",
		"@types/websocket": "^1.0.1",
		"copyfiles": "^2.4.0",
		"del-cli": "^3.0.1",
		"eslint": "^7.10.0",
		"eslint-config-prettier": "^6.12.0",
		"eslint-plugin-adonis": "^1.0.15",
		"eslint-plugin-prettier": "^3.1.4",
		"mrm": "^2.5.1",
		"np": "^6.5.0",
		"prettier": "^2.1.2",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.3"
	},
	"dependencies": {
		"@stomp/stompjs": "^6.0.0-beta1",
		"websocket": "^1.0.32"
	},
	"adonisjs": {
		"instructions": "./build/instructions.js",
		"templates": {
			"config": [
				{
					"src": "config.txt",
					"dest": "stomp"
				}
			],
			"contracts": [
				{
					"src": "contract.txt",
					"dest": "stomp"
				}
			]
		},
		"types": "@gauravgango/adonisjs-stomp-driver",
		"providers": [
			"@gauravgango/adonisjs-stomp-driver"
		],
		"env": {
			"STOMP_CONNECTION": "local",
			"STOMP_HOST": "127.0.0.1",
			"STOMP_PORT": "61616"
		}
	}
}
